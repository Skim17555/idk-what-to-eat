<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4DFF3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/magicButton"
        android:layout_width="159dp"
        android:layout_height="94dp"
        android:layout_marginTop="232dp"
        android:onClick="beginMagic"
        android:text="@string/magicButton"
        app:backgroundTint="#BA4A70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:onClick="continueMagic"
        android:text="@string/yesButton"
        android:textSize="15sp"
        android:visibility="invisible"
        app:backgroundTint="#99DC4C"
        app:layout_constraintEnd_toStartOf="@+id/noButton"
        app:layout_constraintStart_toStartOf="@+id/magicButton"
        app:layout_constraintTop_toBottomOf="@+id/magicButton"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:onClick="continueMagic"
        android:text="@string/noButton"
        android:textSize="15sp"
        android:visibility="invisible"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/yesButton"
        app:layout_constraintEnd_toEndOf="@+id/magicButton"
        app:layout_constraintTop_toBottomOf="@+id/magicButton"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="203dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/title1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/title2"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="414dp"
        android:layout_marginTop="72dp"
        android:contentDescription="da magic genie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/genie4" />

</androidx.constraintlayout.widget.ConstraintLayout>